#:import MapView kivy_garden.mapview.MapView

<MapScreen@Screen>:
    name: "map_screen"
    MapView:
        id: mapview
        lat: root.cur_lat
        lon: root.cur_lon
        zoom: 10


        MapMarkerPopup:
            id: marker_1
            lat: root.cur_lat
            lon: root.cur_lon
            source: "map_marker.png"
            Button:
                on_release:
                    print("Hi")



    BoxLayout:
        size_hint: 1, None
        height: 50
        Button:
            text: "Water Bottle"
            on_press:
                app.root.current = "water_screen"
                root.manager.transition.direction = "right"
        Button:
            text: "Zoom Out"
            on_press:
                mapview.zoom = mapview.zoom - 1
        Button:
            text: "Nearest Ftns"
            on_press:
                root.get_water_ftns()
        #Button:
            #text: "Clear"
            #on_press:
                #root.clear_water_ftns()


